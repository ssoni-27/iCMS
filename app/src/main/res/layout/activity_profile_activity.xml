<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.geekshivam.i_cms.profile_activity">


    <FrameLayout
        android:id="@+id/fn"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/Blue">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/curve_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/shivam" />


    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">
        <TextView
            android:id="@+id/profile_name"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Shivam Soni"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_thin"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="230dp"
            android:layout_height="10dp"
            android:background="@drawable/ial"
            android:layout_gravity="end|bottom"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="0dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_email_black_24dp"/>
            <TextView
                android:id="@+id/profile_id"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:padding="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_gravity="center_vertical"
                android:text="f20171238@pilani.bits-pilani.ac.in"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>








</RelativeLayout>
