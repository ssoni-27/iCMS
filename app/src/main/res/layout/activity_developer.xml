<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.geekshivam.i_cms.Developer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ipc"
        android:background="@drawable/circle">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/bitspilani"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="@font/calibri"
        android:padding="16dp"
        android:text="IPC i-CMS"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:text="Developer"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="1dp"
        android:fontFamily="@font/calibri"
        android:layout_marginLeft="-148dp"
        />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/circle"
        android:layout_below="@+id/ipc"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <ImageView
        android:id="@+id/item1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/shivam" />
    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:fontFamily="@font/calibri"
        android:text="Shivam Soni"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/Sky_Blue">
        <Button
            android:id="@+id/call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_phone_black_24dp"
            android:padding="16dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 7728850326"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/call"
            />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/Blue"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Description"
            android:textSize="25dp"
            android:padding="16dp"/>
    </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>




</RelativeLayout>
