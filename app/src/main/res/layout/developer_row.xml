<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ipc"
        android:background="@drawable/circle">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/bitspilani"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="@font/calibri"
            android:padding="16dp"
            android:text="IPC i-CMS"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:text="Developer"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="1dp"
            android:fontFamily="@font/calibri"
            android:layout_marginLeft="-148dp"
            />
    </LinearLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardCornerRadius="25dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_below="@+id/ipc"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/colorPrimaryDark">
    <ImageView
        android:id="@+id/image_develop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shivam"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/name_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dbaddas"
        android:layout_marginTop="130dp"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/email_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dbaddas"
        android:fontFamily="@font/calibri"
        android:layout_marginTop="160dp"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="200dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/Blue">
<TextView
    android:id="@+id/desc_developer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:text="Shivam Soni"
    android:fontFamily="@font/gotham"
    android:textSize="16sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="bottom">

                <ImageView
                    android:layout_width="33dp"
                    android:paddingRight="4dp"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_height="33dp"
                    android:layout_marginLeft="230dp"
                    android:src="@drawable/circle"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="230dp"
                    android:padding="5dp"
                    android:id="@+id/call_developer"
                    android:src="@drawable/ic_call_black_24dp"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:paddingRight="4dp"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_below="@+id/call_developer"
                    android:layout_marginLeft="230dp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/circle"
                    />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/call_developer"
                    android:layout_marginLeft="230dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:id="@+id/mail_developer"
                    android:src="@drawable/ic_mail_outline_black_24dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>

</RelativeLayout>